{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.esm.tsbuildinfo",
    "target": "ES2023",                                  
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ]
}
